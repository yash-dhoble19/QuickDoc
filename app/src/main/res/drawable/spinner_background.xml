<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Solid background color -->
    <solid android:color="@color/white" />

    <!-- Border (optional) -->
    <stroke
        android:width="1dp"
        android:color="@color/grey" />

    <!-- Padding (optional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>